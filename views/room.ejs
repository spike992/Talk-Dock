<!DOCTYPE html>
<html lang="en">
<head>
    <script>
        const ROOM_ID = "<%= roomId %>"
    </script>
    <script defer src="https://unpkg.com/peerjs@1.4.7/dist/peerjs.min.js"></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="../public/script.js" defer></script>
    <meta charset="UTF-8">
    <title>Chatroom</title>
    <style>
        body {
            background-color: #f8f8f8;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: row;
            justify-content: flex-end;
            align-items: stretch;
            height: 100vh;
            margin: 0;
        }

        #message-container {
            max-width: 600px;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
        }

        #messages {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        #messages li {
            margin-bottom: 10px;
            overflow-wrap: break-word;
        }

        #messages li:last-child {
            margin-bottom: 0;
        }

        #form {
            display: flex;
            align-items: flex-end;
            margin-top: 10px;
        }

        #input {
            flex-grow: 1;
            padding: 5px;
            border: 1px solid #cccccc;
            border-radius: 3px;
            font-size: 14px;
        }

        #submit-btn {
            width: 60px;
            padding: 5px;
            border: none;
            background-color: #4CAF50;
            color: #ffffff;
            border-radius: 3px;
            font-size: 14px;
            cursor: pointer;
            margin-left: 10px;
        }

        #video-grid {
            flex: 1;
            display: grid;
            grid-template-columns: repeat(auto-fill, 400px); /* Increased the width of grid items */
            grid-auto-rows: 400px; /* Increased the height of grid items */
            gap: 20px;
            justify-content: flex-start;
            align-items: center;
            padding: 20px;
            margin-top: 50px;
            float: left;
        }

        video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 5px;
            border: 1px solid #cccccc; /* Added border */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Added box shadow */
        }
        #copycode {
            font-size: 1.1rem;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 10px;
        }

        #copybutton {
            width: 60px;
            padding: 5px;
            border: none;
            background-color: #4CAF50;
            color: #ffffff;
            border-radius: 3px;
            font-size: 14px;
            cursor: pointer;
            margin-left: 10px;
        }

    </style>
</head>
<body>
    <div id="copycode">Kopiraj kodo sobe! <button id="copybutton" onclick="copyToClipboard()">Kopiraj</button></div>
    <div id="video-grid">
    </div>

    <div id="message-container">
        <ul id="messages"></ul>
        <form id="form">
            <input id="input" autocomplete="off" placeholder="Type your message" />
            <button id="submit-btn">Send</button>
        </form>
    </div>
    
    <script>
        function copyToClipboard() {
            const code = ROOM_ID;
            const tempInput = document.createElement("input");
            tempInput.value = code;
            document.body.appendChild(tempInput);

            tempInput.select();
            tempInput.setSelectionRange(0, 99999);

            document.execCommand("copy");

            document.body.removeChild(tempInput);

            alert("Code copied to clipboard!");
        }
    </script>
</body>
</html>
